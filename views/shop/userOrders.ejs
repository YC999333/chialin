<%- include('../includes/head.ejs') %>
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>             
            <% if (orders.length <= 0) { %>
                <h1>Nothing there!</h1>
                <% } else { %>
                    <div class="ui container">
                        <% orders.forEach(order => { %> 
                            <div class="ui clearing segment">
                                <div class="menu-item">
                                    <div class="content">
                                        <h1>訂單編號 - # <%= order._id %></h1>
                                        <% order.products.forEach(p => { %>
                                            <div class="ui list">
                                                <div class="item">
                                                    品項: <%= p.product.title %> 
                                                </div>
                                                <div class="item">
                                                    數量 : <%= p.quantity %> 份
                                                </div>
                                                <div class="item">
                                                    金額: $<%= p.quantity * p.product.price %>
                                                </div>
                                            </div>
                                        <% }); %>
                                            
                                            <div class="ui list">
                                                <div class="item">
                                                    <h3>合計: $<%= order.total %></h3>
                                                </div>
                                                <div class="item">
                                                    取餐日期: <%= order.pickUpDate %>
                                                </div>
                                                <div class="item">
                                                    取餐時間: <%= order.pickUpTime %>
                                                </div>
                                                <div class="item">
                                                    電話: <%= order.user.phone %>
                                                </div>
                                            </div>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
            <% }; %>                      
                                        
        </main>
    <%- include('../includes/end.ejs') %>